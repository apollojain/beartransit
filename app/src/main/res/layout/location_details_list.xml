<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#006400">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Destination"
        android:id="@+id/final_destination"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/second_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Line"
        android:id="@+id/line_name"
        android:textColor="#ffffff"
        android:padding="10dp"

        android:layout_above="@+id/second_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/na"
        android:id="@+id/first_time"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/na"
        android:id="@+id/second_time"
        android:textColor="#ffffff"
        android:layout_below="@+id/first_time"
        android:layout_alignRight="@+id/first_time"
        android:layout_alignEnd="@+id/first_time"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />
</RelativeLayout>